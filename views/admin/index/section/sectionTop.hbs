<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="text-center">Left</h3>
                <div class="card card-primary">
                    <form action="/admin/index/section-top-left" method="POST" enctype="multipart/form-data">
                        <label for="header-left-course">Lesson type</label>
                        <input type="text" class="form-control" id="header-left-course" name="lesson_name" required />
                        <label for="section-top-left-about-the-lesson" class="mt-3">About the lesson</label>
                        <input type="text" class="form-control" id="section-top-left-about-the-lesson"
                            name="about_the_lesson" required />
                        <label for="section-top-left-img-lesson" class="mt-3">Lesson img</label>
                        <input type="file" class="form-control" id="section-top-left-img-lesson" name="img" required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="text-center">Right</h3>
                <div class="card card-primary">
                    <form action="/admin/index/section-top-right" method="POST" enctype="multipart/form-data">
                        <label for="header-right-course">Lesson type</label>
                        <input type="text" class="form-control" id="header-right-course" name="lesson_name_right" required />
                        <label for="section-top-right-about-the-lesson" class="mt-3">About the lesson</label>
                        <input type="text" class="form-control" id="section-top-right-about-the-lesson"
                            name="about_the_lesson_right" required />
                        <label for="section-top-right-img-lesson" class="mt-3">Lesson img</label>
                        <input type="file" class="form-control" id="section-top-right-img-lesson" name="img_right" required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-12 ">
                <div class="education">
                    {{#each left}}
                    <div class="offline_lesson col-lg-7">
                        <div class="item">
                            <h4>{{lesson_name}}</h4>
                            <h6>{{about_the_lesson}}</h6>
                            <h6>{{date}}</h6>
                            <a href="/admin/index/sect_top_left/{{id}}" class="btn btn-light">Delete</a>
                        </div>
                        <div class="item-right">
                            <img src="/images/{{img}}" alt="" />
                        </div>
                    </div>
                    {{/each}}
                    <div class="right-index">
                        {{#each right}}
                        <div class="online_lesson col-lg-7">
                            <div class="item-right">
                                <img src="/images/{{img_right}}" alt="" />
                            </div>
                            <div class="item">
                                <h4>{{lesson_name_right}}</h4>
                                <h6>{{about_the_lesson_right}}</h6>
                                <h6>{{date}}</h6>
                                <a href="/admin/index/sect_top_right/{{id}}" class="btn btn-light">Delete</a>
                            </div>

                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>