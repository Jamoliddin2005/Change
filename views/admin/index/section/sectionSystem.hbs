<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary">
                    <form action="/admin/index/section-system" method="POST" enctype="multipart/form-data">
                        <label for="section-system-name" class="mt-3">Name</label>
                        <input type="text" class="form-control" id="section-system-name" name="name" required />
                        <label for="section-system-about" class="mt-3">About</label>
                        <input type="text" class="form-control" id="section-system-about" name="about" required />
                        <label for="section-system-img" class="mt-3">Image</label>
                        <input type="file" class="form-control" id="section-system-img" name="img" required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="container">
                <div class="system_education">
                    <div class="row justify-content-between">
                        {{#each system}}
                        <div class="col-lg-5-item course_system">
                            <div class="row align-items-center">
                                <div class="col-lg-8">
                                    <h4>{{name}}</h4>
                                    <p>{{about}}</p>
                                    <a href="/admin/index/section-system/delete/{{id}}" class="btn btn-default">Delete</a>
                                </div>
                                <div class="col-lg-4">
                                    <img src="/images/{{img}}" alt="" />
                                </div>
                            </div>
                        </div>
                        {{/each }}
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>