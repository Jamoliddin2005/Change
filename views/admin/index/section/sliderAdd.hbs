<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            {{#if sliderAdddd}}
            <div class="col-md-6">
                <div class="card card-primary">
                    <form action="/admin/index/section-slider-add" method="POST" enctype="multipart/form-data">
                        <label for="header-left-course">Name</label>
                        <input type="text" class="form-control" id="header-left-course" name="name" required />
                        <label for="sect-course" class="mt-3">Course</label>
                        <select id="sect-course" class="form-control" name="course">
                            <option value="Developer">Developer</option>
                            <option value="Designer">Designer</option>
                            <option value="3Ds MAX">3Ds MAX</option>
                            <option value="SMM">SMM</option>
                            <option value="Python">Python</option>
                            <option value="Motion Graphic">Motion Graphic</option>
                        </select>
                        <label for="img" class="mt-3">Image</label>
                        <input type="file" class="form-control" id="img" name="img" required />
                        <label for="instagram" class="mt-3">Instagram link</label>
                        <input type="text" class="form-control" id="instagram" name="instagram" required />
                        <label for="telegram" class="mt-3">Telegram link</label>
                        <input type="text" class="form-control" id="telegram" name="telegram" required />
                        <label for="linkedin" class="mt-3">Linkedin link</label>
                        <input type="text" class="form-control" id="linkedin" name="linkedin" required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            {{/if}}
            {{#if slideruserUpdate}}
            <div class="col-md-6">
                <div class="card card-primary">
                    <form action="/admin/index/section-slider-update/{{data.id}}" method="POST" enctype="multipart/form-data">
                        <label for="header-left-course">Name</label>
                        <input type="text" class="form-control" id="header-left-course" name="name"
                            value="{{data.name}}" required />
                        <label for="sect-course" class="mt-3">Course</label>
                        <select id="sect-course" class="form-control" name="course" value="{{data.course}}">
                            <option value="Developer">Developer</option>
                            <option value="Designer">Designer</option>
                            <option value="3Ds MAX">3Ds MAX</option>
                            <option value="SMM">SMM</option>
                            <option value="Python">Python</option>
                            <option value="Motion Graphic">Motion Graphic</option>
                        </select>
                        <label for="img" class="mt-3">Image</label>
                        <input type="file" class="form-control" id="img" name="img" required />
                        <label for="instagram" class="mt-3">Instagram link</label>
                        <input type="text" class="form-control" id="instagram" name="instagram"
                            value="{{data.instagram}}" required />
                        <label for="telegram" class="mt-3">Telegram link</label>
                        <input type="text" class="form-control" id="telegram" name="telegram" value="{{data.telegram}}"
                            required />
                        <label for="linkedin" class="mt-3">Linkedin link</label>
                        <input type="text" class="form-control" id="linkedin" name="linkedin" value="{{data.linkedin}}"
                            required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>