<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="container">
                <div class="certificate">
                    <div class="row align-items-center">
                        <div class="col-lg-4">
                            <div class="row">
                                <div class="col-12">
                                    <div class="list-group" id="list-tab" role="tablist">
                                        <a class="list-group-item list-group-item-action active" id="list-home-list"
                                            data-bs-toggle="list" href="#home_active" role="tab"
                                            aria-controls="list-home">Home</a>
                                        {{#each listgroup}}
                                        <a class="list-group-item list-group-item-action" id="list-home-list"
                                            data-bs-toggle="list" href="#{{list_group}}" role="tab"
                                            aria-controls="list-home">{{list_group}}</a>
                                        {{/each}}
                                    </div>
                                    <a href="/admin/index/section/list-group/add" class="btn btn-danger mt-3">Add</a>

                                </div>
                                <div class="col-12">
                                    <div class="tab-content" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="home_active" role="tabpanel"
                                            aria-labelledby="list-home-list">
                                            Kursni tamomlagan
                                            talabalarning o‘zlashtirish
                                            ko’rsatkichi e‘tiborga
                                            olingan holda sertifikatlar beriladi.
                                        </div>
                                        {{#each listgroup}}
                                        <div class="tab-pane fade show" id="{{list_group}}" role="tabpanel"
                                            aria-labelledby="list-home-list">{{tab_pane}} <a
                                                href="/admin/index/section/list-group/update/{{id}}"
                                                class="btn btn-primary mt-3 d-block">Update</a>
                                            <a href="/admin/index/section/list-group/delete/{{id}}"
                                                class="btn btn-primary mt-3 d-block">Delete</a>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-2">
                            <a href="/admin/index/section-medal-img" class="btn btn-primary d-block">Add image</a>
                            {{#each imgAddMedal}}
                            <img src="/images/{{img}}" alt="" style="width: 100%;">
                            <a href="/admin/index/section-medal/delete/{{id}}"
                                class="btn btn-primary d-block">Delete</a>
                            {{/each}}
                        </div>
                        <div class="col-lg-6">
                            <a href="/admin/index/section-sertifikat-img" class="btn btn-primary d-block">Add image</a>
                            {{#each medalimg}}
                            <img src="/images/{{img}}" alt="" style="width: 100%;">
                            <a href="/admin/index/section-sertifikat/delete/{{id}}"
                                class="btn btn-primary d-block">Delete</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>