<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="container">
                <a href="/admin/index/section-slider-add" class="btn btn-success">Add slide</a>
            </div>
            <div class="container mt-5">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        {{#each user}}
                        <div class="swiper-slide">
                            <img src="/images/{{img}}" alt="">
                            <div class="about">
                                <h3>{{name}}</h3>
                                <h4>{{course}}</h4>
                                <ul>
                                    <li>
                                        <a href="{{instagram}}" target="_blank">
                                            <i class="fab fa-instagram"></i>
                                        </a>
                                    </li>
                                    <li class="ml-3">
                                        <a href="{{telegram}}" target="_blank">
                                            <i class="fab fa-telegram"></i>
                                        </a>
                                    </li>
                                    <li class="ml-3">
                                        <a href="{{linkedin}}" target="_blank">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                    </li>
                                </ul>
                                <a href="/admin/index/slide-user-delete/{{id}}" class="btn btn-success">Delete</a>
                                <a href="/admin/index/slide-user-update/{{id}}" class="btn btn-success">Update</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class="swiper-button-next"><i class="fas fa-chevron-right"></i></div>
                    <div class="swiper-button-prev"><i class="fas fa-chevron-left"></i></div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 4,
        spaceBetween: 30,
        loop: true,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        autoplay: {
            delay: 3000,
        },
    });
</script>