<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary">
                    <form action="/admin/index/header-right-course" method="POST">
                        <label for="header-right-course">Course Name</label>
                        <input type="text" class="form-control" id="header-right-course" name="header_courses"
                            required />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-12 right-header">
                <div class="lessons">
                    <ul>
                        {{#each courses}}
                        <div class="col-lg-2">
                            <div class="col-lg-12">
                                <li><a href="/course/{{id}}">{{header_courses}}</a></li>
                            </div>
                            <div class="col-lg-12">
                                <a href="/admin/index/header-right-course/{{id}}">Delete</a>
                            </div>
                        </div>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>