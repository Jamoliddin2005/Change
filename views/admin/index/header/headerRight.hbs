                        <input type="text" class="form-control" id="header-right-text" name="header_text"
                            value="{{header_text}}" />
                        <label for="header-right-span" class=" mt-3">Span</label>
                        <input type="text" class="form-control" id="header-right-span" name="header_span"
                            value="{{header_span}}" />
                        <label for="header-right-about" class=" mt-3">About the site</label>
                        <input type="text" class="form-control" id="header-right-about" name="header_about"
                            value="{{header_about}}" />
                        <button class="btn btn-primary">Submit</button>
                        {{/each}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>