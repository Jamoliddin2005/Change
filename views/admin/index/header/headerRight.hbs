<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3>Update text</h3>
                <div class="card card-primary">
                    {{#each header}}
                    <form action="/admin/index/header-right/{{id}}" method="POST">
                        <label for="header-right-text">Header Text</label>
                        <input type="text" class="form-control" id="header-right-text" name="header_text"
                            value="{{header_text}}" />
                        <label for="header-right-span" class=" mt-3">Span</label>
                        <input type="text" class="form-control" id="header-right-span" name="header_span"
                            value="{{header_span}}" />
                        <label for="header-right-about" class=" mt-3">About the site</label>
                        <input type="text" class="form-control" id="header-right-about" name="header_about"
                            value="{{header_about}}" />
                        <button class="btn btn-primary">Submit</button>
                    </form>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">
                <h3>Add text</h3>
                <div class="card card-primary">
                    <form action="/admin/index/header-right" method="POST">
                        {{#each header}}
