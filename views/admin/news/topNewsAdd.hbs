<div class="container">
    <div class="col-lg-6 m-auto p-5 bg-gradient-blue">
        <form action="/admin/news/news/add" method="POST" enctype="multipart/form-data">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" id="title">
            <label for="more">More</label>
            <textarea name="more" id="more" class="form-control" cols="30" rows="10"></textarea>
            <label for="img">Image</label>
            <input type="file" name="img" class="form-control" id="img">
            <button class="btn btn-danger mt-4">Submit</button>
        </form>
    </div>
</div>